{
  "name": "pfk-invoice-express",
  "version": "1.0.0",
  "main": "src/app.js",
  "scripts": {
    "build": "tsc",
    "serve": "ts-node app.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec tsx src/app.ts",
    "lint": "eslint 'src/**/*.ts'",
    "start": "docker compose up --build",
    "start:dev": "npm run dev",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "npm run db:migrate:reset && npm run db:seed",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "express": "^5.1.0",
    "install": "^0.13.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "npm": "^11.4.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "cors": "^2.8.5",
    "prisma": "^6.12.0",
    "zod": "^4.0.5"
  }
}